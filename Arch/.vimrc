set mouse=a
set ruler

""""""""""""""""""""
"coding options
""""""""""""""""""""
syntax enable

"use spaces not tabs
set expandtab

"1 tab = 4 spaces
set shiftwidth=4
set tabstop=4

"""""""""""""""""
"searching options
"""""""""""""""""

"ignore case during search
set ignorecase

"highlight search
set hlsearch

set incsearch
